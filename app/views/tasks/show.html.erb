
<div class="container">
  <h2> <%=@task.title %></h2>
  <button type="button"><%= link_to "✎Edit this task", edit_task_path(@task.id) %></button>
  <p>details:</p> <%=@task.details %>
  <p>completed:</p> <%= @task.completed %>
  <button type="button"><%= link_to "Delete this task", destroy_path(@task.id) %></button>
  <%= link_to "Back to list", tasks_path %>
</div>
