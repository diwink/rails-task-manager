<div class="container">
  <h1>My tasks</h1>
  <ul> <% @tasks.each do |task| %>
    <% if task.completed == false %>
      <li> ☐ <%= link_to task.title, task_path(task.id)%></li>
    <% else %>
      <li> ☑ <%= link_to task.title, task_path(task.id)%></li>
    <% end %>
  <% end %>
  </ul>

  <%= link_to "+ add new task", new_task_path %>
</div>

